<span class="u-pull-right">
  <% if can? :update, @user %>
    <%= link_to 'Edit', edit_user_path(@user), :class => 'button' %>
  <% end %>
  <% if can? :destroy, @user %>
    <%= link_to 'Delete', user_path(@user),
                          :method => :delete,
                          data: { confirm: 'Are you sure you want to delete this user?' },
                          :class => 'button button-danger' %>
  <% end %>
</span>
<h4><%= @user.first_name + ' ' + @user.last_name %></h4>
<hr>

<div class="row">
  <h5>Personal details</h5>
</div>

<div class="row">
  <div class="one column">
    <%= image_tag @user.gravatar_url, :class => 'avatar avatar-xl' %>
  </div>
  <div class="eleven columns">
    <div class="row">
      <div class="two columns align-right">
        Username
      </div>
      <div class="eight columns">
        <p><strong><%= @user.uid %></strong></p>
      </div>
    </div>

    <div class="row">
      <div class="two columns align-right">
        Full name
      </div>
      <div class="eight columns">
        <p><strong><%= @user.first_name + ' ' + @user.last_name %></strong></p>
      </div>
    </div>

    <div class="row">
      <div class="two columns align-right">
        Email
      </div>
      <div class="eight columns">
        <p><strong><%= @user.email %></strong></p>
      </div>
    </div>
  </div>

<div class="row">
  <h5>Authorization</h5>
  <p><%= @user.first_name %> has been assigned the following roles:</p>
  <% if @user.roles.length == 0 %>
    <p><em>No roles assigned</em></p>
  <% end %>
  <div class="eight columns">
    <ul>
      <% @user.roles.each do |role| %>
        <li><%= role.display_name %></li>
      <% end %>
    </ul>
  </div>
</div>
