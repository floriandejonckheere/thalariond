<% content_for :title do   %>
  <ol class="breadcrumb">
    <li>Mail</li>
    <li><%= link_to 'Email aliases', mail_path(:anchor => "email_aliases") %></li>
  </ol>
<% end %>
<% content_for :section do %><%= @email_alias.alias %><% end %>

<div class="pull-right">
  <div class="btn-group">
    <% if can? :update, @email_alias %>
      <%= link_to edit_email_alias_path(@email_alias), :class => 'btn btn-secondary btn-sm', :title => 'Edit email alias', :data => {:toggle => 'tooltip'} do %>
        <i class="fa fa-pencil"></i>
      <% end %>
    <% end %>
    <% if can? :destroy, @email_alias %>
      <%= link_to email_alias_path(@email_alias),
                            :method => :delete,
                            :title => 'Delete email alias',
                            data: { :confirm => 'Are you sure you want to delete this email alias?',
                                    :toggle => 'tooltip' },
                            :class => 'btn btn-secondary btn-sm' do %>
        <i class="fa fa-trash"></i>
      <% end %>
    <% end %>
  </div>
</div>

<table class="attribute-table">
  <tr>
    <td>Alias</td>
    <td><%= @email_alias.alias %></td>
  </tr>
  <tr>
    <td>Destination email</td>
    <td><%= @email_alias.mail %></td>
  </tr>
</table>
