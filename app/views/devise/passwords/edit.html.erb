<div class="signin-container">
  <%= link_to new_session_path(resource_name) do %>
    <%= image_tag("logo-white", :class => 'signin-logo') %>
  <% end %>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <% if flash.any? or devise_error_messages? %>
    <div class="row">
      <div class="col-xs-12">
        <%= render 'partials/messages' %>
        <%= devise_error_messages! %>
      </div>
    </div>
    <% end %>

    <%= f.hidden_field :reset_password_token %>
    <%= f.password_field :password, placeholder: 'Password (minimum ' + @minimum_password_length.to_s + ' characters)', autofocus: true, autocomplete: 'off' %>
    <%= f.password_field :password_confirmation, placeholder: 'Confirm password', autocomplete: 'off' %>

    <%= f.submit 'Reset password' %>
  <% end %>
</div>
