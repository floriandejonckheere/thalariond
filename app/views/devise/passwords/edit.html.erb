<div class="signin-container">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <h1 class="title">Reset password</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12 col-md-8 col-md-offset-2">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.hidden_field :reset_password_token %>
          <% if flash.any? %>
          <div class="row">
            <div class="col-xs-12">
              <%= render 'partials/messages' %>
            </div>
          </div>
          <% end %>
          <div class="row">
            <div class="col-xs-12 col-md-5">
              <%= f.password_field :password, placeholder: 'Password (minimum ' + @minimum_password_length.to_s + ' characters)', autofocus: true, autocomplete: 'off' %>
            </div>
            <div class="col-xs-12 col-md-5">
              <%= f.password_field :password_confirmation, placeholder: 'Confirm password', autocomplete: 'off' %>
            </div>
            <div class="col-xs-6 col-xs-offset-3 col-md-2 col-md-offset-0">
              <%= f.submit 'Reset' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
