<% content_for 'title' do %>Sign in<% end %>

<% if flash.any? %>
  <div class="m-b-2">
    <% flash.each do |key, value| %>
      <% if not value.blank? %>
        <div class="text-danger text-xs-center ">
          <strong><%= value %></strong>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="inner-addon left-addon">
    <i class="fa fa-user"></i>
      <%= f.text_field :uid,
                        :placeholder => 'Username',
                        :autofocus => true,
                        :class => 'form-control m-b-2' %>
  </div>
  <div class="inner-addon left-addon">
    <i class="fa fa-lock"></i>
      <%= f.password_field :password,
                        :placeholder => 'Password',
                        :autocomplete => 'off',
                        :class => 'form-control m-b-2' %>
  </div>

  <div class="m-t-2">
    <%= f.submit 'Sign in', :class => 'btn btn-primary p-x-2' %>
    <% if devise_mapping.recoverable? %>
      <%= link_to new_password_path(resource_name), :class => 'btn pull-xs-right' do %>
        <small>Forgot password</small>
      <% end %>
    <% end %>
    <% if devise_mapping.confirmable? %>
      <%= link_to new_confirmation_path(resource_name), :class => 'btn pull-xs-right' do %>
        <small>Confirm account</small>
      <% end %>
    <% end %>
  </div>
<% end %>
