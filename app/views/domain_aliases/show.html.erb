<% content_for :title do   %>
  <ol class="th breadcrumb">
    <li>Mail</li>
    <li><%= link_to 'Domain aliases', domains_path(:anchor => "domain_aliases") %></li>
  </ol>
<% end %>
<% content_for :section do %>Domain alias <%= @domain_alias.alias %><% end %>

<div class="pull-right">
  <div class="btn-group">
    <% if can? :update, @domain_alias %>
      <%= link_to edit_domain_alias_path(@domain_alias), :class => 'btn btn-secondary btn-sm', :title => 'Edit domain alias', :data => {:toggle => 'tooltip'} do %>
        <i class="fa fa-pencil"></i>
      <% end %>
    <% end %>
    <% if can? :destroy, @domain_alias %>
      <%= link_to domain_alias_path(@domain_alias),
                            :method => :delete,
                            :title => 'Delete domain alias',
                            data: { :confirm => 'Are you sure you want to delete this domain alias?',
                                    :toggle => 'tooltip' },
                            :class => 'btn btn-secondary btn-sm' do %>
        <i class="fa fa-trash"></i>
      <% end %>
    <% end %>
  </div>
</div>

<p>
  <strong>Alias</strong>: <%= @domain_alias.alias %>
</p>
<p>
  <strong>Destination domain</strong>: <%= @domain_alias.domain %>
</p>
