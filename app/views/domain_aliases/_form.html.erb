<%= form_for @domain_alias do |f| %>
  <% if @domain_alias.errors.any? %>
  <div class="alert alert-danger">
    <strong><%= pluralize(@domain_alias.errors.count, 'error') %> prohibited this domain alias from being saved:</strong>
    <ul>
    <% @domain_alias.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <fieldset class="form-group">
    <label for="alias">Alias</label>
    <%= f.text_field :alias,
        :placeholder => :alias,
        :class => 'form-control',
        :id => 'alias',
        :required => 'true' %>
  </fieldset>

  <fieldset class="form-group">
    <label for="domain">Destination domain</label>
    <%= f.text_field :domain,
        :placeholder => :domain,
        :class => 'form-control',
        :value => @domain_alias.domain || params[:domain],
        :id => 'domain',
        :required => 'true' %>
  </fieldset>

  <%= f.submit 'Save', :class => 'btn btn-primary' %>
<% end %>
