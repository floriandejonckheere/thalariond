<% content_for :title do   %>
  <ol class="breadcrumb">
    <li>Mail</li>
    <li><%= link_to 'Emails', mail_path %></li>
  </ol>
<% end %>
<% content_for :section do %>Email <%= @email %><% end %>

<% if @email.group %>
  <div class="alert alert-info">
    The permission group <strong><%= @email.group.name %></strong> will be renamed when changing the email's local part.
  </div>
<% end %>

<%= render 'form' %>
