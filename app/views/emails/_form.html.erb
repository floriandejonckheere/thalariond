<%= form_for @email do |f| %>
  <% if @email.errors.any? %>
  <div class="alert alert-danger">
    <strong><%= pluralize(@email.errors.count, 'error') %> prohibited this email from being saved:</strong>
    <ul>
    <% @email.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <fieldset class="form-group">
    <label for="mail">Local part</label>
    <%= f.text_field :mail,
        :placeholder => :mail,
        :class => 'form-control',
        :id => 'mail',
        :required => 'true' %>
  </fieldset>

  <fieldset class="form-group">
    <label for="domain">Domain</label>
    <%= f.text_field :domain,
        :placeholder => :domain,
        :class => 'form-control',
        :id => 'domain',
        :required => 'true' %>
  </fieldset>

  <%= f.submit 'Save', :class => 'btn btn-primary' %>
<% end %>
