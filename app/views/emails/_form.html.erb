<%= form_for [@domain, @email] do |f| %>
  <% if @email.errors.any? %>
  <div class="alert alert-danger">
    <strong><%= pluralize(@email.errors.count, 'error') %> prohibited this email from being saved:</strong>
    <ul>
    <% @email.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <fieldset class="form-group form-inline">
    <label for="mail" class="block">Local part</label>
    <%= f.text_field :mail,
        :placeholder => :mail,
        :class => 'form-control form-inline',
        :id => 'mail',
        :autofocus =>'true',
        :required => 'true' %>
      @<%= @domain.domain %>
  </fieldset>

  <%= f.submit 'Save', :class => 'btn btn-primary' %>
<% end %>
