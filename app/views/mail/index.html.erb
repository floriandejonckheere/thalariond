<% content_for :title do   %>Mail<% end %>
<% content_for :section do %>Emails<% end %>

<ul class="nav nav-tabs" role="tablist">
  <li class="nav-item">
    <a href="#all" class="nav-link active" role="tab" data-toggle="tab">All</a>
  </li>
  <li class="nav-item">
    <a href="#participated" class="nav-link" role="tab" data-toggle="tab">Participated</a>
  </li>
  <li class="nav-item">
    <a href="#owned" class="nav-link" role="tab" data-toggle="tab">Owned</a>
  </li>
</ul>


<div class="tab-content">
  <div role="tabpanel" class="tab-pane fade in active" id="all">
    <table class="th table">
      <thead>
        <tr>
          <th><input type="checkbox"></th>
          <th>Email</th>
          <th>Members</th>
        </tr>
      </thead>
      <tbody>
        <% Email.all.each do |email| %>
          <% if current_user.can? :read, email %>
            <tr>
              <td>
                <input type="checkbox">
              </td>
              <td>
                <%= link_to email, email_path(email) %>
              </td>
              <td>
                None
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
  <div role="tabpanel" class="tab-pane fade in" id="participated">
    <table class="th table">
      <thead>
        <tr>
          <th><input type="checkbox"></th>
          <th>Email</th>
          <th>Members</th>
        </tr>
      </thead>
      <tbody>
        <% Email.all.reject { |email| !email.permission_group.users.include?(current_user) }.each do |email| %>
          <% if current_user.can? :read, email %>
            <tr>
              <td>
                <input type="checkbox">
              </td>
              <td>
                <%= link_to email, email_path(email) %>
              </td>
              <td>
                None
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
  <div role="tabpanel" class="tab-pane fade in" id="owned">
    <table class="th table">
      <thead>
        <tr>
          <th><input type="checkbox"></th>
          <th>Email</th>
          <th>Members</th>
        </tr>
      </thead>
      <tbody>
        <% Email.all.reject { |email| email.permission_group.owner != current_user }.each do |email| %>
          <% if current_user.can? :read, email %>
            <tr>
              <td>
                <input type="checkbox">
              </td>
              <td>
                <%= link_to email, email_path(email) %>
              </td>
              <td>
                None
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
